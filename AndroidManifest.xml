<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mathchallenge.rook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/math"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.mathchallenge.rook.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mathchallenge.rook.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.mathchallenge.rook.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mathchallenge.rook.Preferences"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.mathchallenge.rook.PREFERENCES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mathchallenge.rook.PauseMenuActivity"
            android:label="Paused" 
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.mathchallenge.rook.PAUSEMENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mathchallenge.rook.AnswerInputDialogActivity"
            android:label="Your Answer" 
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.mathchallenge.rook.INPUTACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mathchallenge.rook.LevelSelectActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.mathchallenge.rook.LEVELSELECT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
